{
  "name": "wxt-react-starter",
  "description": "manifest.json description",
  "private": true,
  "version": "1.5.2",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "build:chrome": "wxt build",
    "build:firefox": "wxt build -b firefox --mv3",
    "zip:chrome": "cd .output/chrome-mv3 && zip -r ../excali-chrome.zip .",
    "zip:firefox": "cd .output/firefox-mv3 && zip -r ../excali-firefox.zip .",
    "tar:chrome": "tar cvfz excali.chrome.tar.gz -C .output/chrome-mv3 .",
    "tar:firefox": "tar cvfz excali.firefox.tar.gz -C .output/firefox-mv3 .",
    "clean:editor": "rm -rf public/editor",
    "clean:output": "rm -rf .output",
    "clean:archive": "rm -rf *.tar.gz",
    "postinstall": "wxt prepare"
  },
  "dependencies": {
    "@tabler/icons-react": "^3.24.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^1.7.1",
    "tailwind-merge": "^2.5.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@types/chrome": "^0.0.280",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@wxt-dev/module-react": "^1.1.1",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.6.3",
    "wxt": "^0.19.13"
  }
}
